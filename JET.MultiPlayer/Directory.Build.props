<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <xBinDir>$(SolutionDir)\bin</xBinDir>
    </PropertyGroup>

    <Import
      Project="$(SolutionDir)GameDir.props"
      Condition="Exists('$(SolutionDir)GameDir.props')"/>

    <PropertyGroup>
        <EFTGameDir_Managed>$(EFTGameDir)\EscapeFromTarkov_Data\Managed</EFTGameDir_Managed>
    </PropertyGroup>
    
    <Target Name="Check_EFTGameDir" BeforeTargets="Compile">
        <Message Importance="High"
                 Text="Using EFT references from: $(EFTGameDir_Managed)" />
        
        <!--<Error Text="GameDir.props not found. Did you rename GameDir.props.example? Create it and RE-BUILD the solution"
               Condition="'$(EFTGameDir)' == ''" />-->
    </Target>
</Project>
