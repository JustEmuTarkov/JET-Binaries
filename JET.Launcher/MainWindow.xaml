<Window x:Class="JET.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JET.Launcher"
        mc:Ignorable="d"
        Title="JustEmuTarkov Launcher" Height="368" Width="583" Background="Black" Foreground="White" FontFamily="BankGothic Lt BT">
    <Grid>
        <TabControl Height="328" VerticalAlignment="Top" Background="Black" BorderBrush="White" Foreground="White" Margin="0">
            <TabItem Header="Launcher" Foreground="White" BorderBrush="White" Background="Black" FontFamily="BankGothic Lt BT">
                <Grid Background="Black" Margin="10,10,11,10">
                    <!-- info: new line "&#xA;"-->
                    <!-- Right Menu -->
                    <Grid HorizontalAlignment="Left" Height="210" Margin="373,10,0,0" VerticalAlignment="Top" Width="172">
                        <GroupBox Header=" Quick Menu " HorizontalAlignment="Left" Height="207" Margin="10,0,0,0" VerticalAlignment="Top" Width="152" BorderBrush="#FF4B4B4B" Foreground="#FFC7C7C7">
                            <Grid HorizontalAlignment="Left" Height="192" VerticalAlignment="Top" Width="142" Margin="0,-3,-2,-2">
                                <Button x:Name="bnt1" Content="Server Webpage" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="130" Margin="6,8,6,0" Height="20" Background="#FF1F1F1F" Foreground="#FFBDBDBD" BorderBrush="#FFB0B0B0" Click="bnt1_Click"/>
                                <Button x:Name="bnt2" Content="Server Log's" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="130" Margin="6,32,6,0" Height="20" Background="#FF1F1F1F" Foreground="#FFBDBDBD" BorderBrush="#FFB0B0B0" Click="bnt2_Click"/>
                                <Button x:Name="bnt3" Content="Game Log's" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="130" Margin="6,56,6,0" Height="20" Background="#FF1F1F1F" Foreground="#FFBDBDBD" BorderBrush="#FFB0B0B0" Click="bnt3_Click"/>
                                <Button x:Name="bnt4" Content="Clear Server&#xA;     Cache" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="130" Margin="6,80,6,0" Height="33" Background="#FF1F1F1F" Foreground="#FFBDBDBD" BorderBrush="#FFB0B0B0" UseLayoutRounding="False" Click="bnt4_Click"/>

                            </Grid>
                        </GroupBox>
                    </Grid>
                    <!-- ApplyButton -->
                    <Button Name="__ApplyButton" Content="Connect" HorizontalAlignment="Left" Margin="26,142,0,0" VerticalAlignment="Top" Width="120" Background="#FF1F1F1F" Foreground="#99FFFFFF" BorderBrush="White" Height="30" Click="__ApplyButton_Click" IsEnabled="False"/>
                    <!-- ServerList -->
                    <!-- Login -->
                    <!-- Password -->
                    <Label Name="__LauncherError" Content="ErrorMSG" HorizontalAlignment="Left" VerticalAlignment="Top" Width="373" BorderThickness="1" BorderBrush="#7FFF0000" Foreground="#99FF0000" Visibility="Hidden"/>
                    <Grid Name="__Connect" HorizontalAlignment="Left" Height="68" Margin="16,69,0,0" VerticalAlignment="Top" Width="140">
                        <Label Content="Server's List" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#99FFFFFF" Height="20" Width="120" Margin="7,6,0,0"/>
                        <ComboBox x:Name="__ServerList" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="120" Foreground="White" Background="Black" Height="27" DataContextChanged="__ServerList_DataContextChanged"/>
                    </Grid>
                    <Grid Name="__Login" HorizontalAlignment="Left" Height="109" Margin="0,28,0,0" VerticalAlignment="Top" Width="171">
                        <Label Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#99FFFFFF" Height="20" Width="120" Margin="10,10,0,0"/>
                        <TextBox HorizontalAlignment="Left" Height="20" Margin="10,30,-19,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="151" Background="Black" Foreground="White" BorderBrush="#FF8C8D8F" SelectionBrush="#FF760303" FontSize="16" TextDecorations="{x:Null}" IsEnabled="False"/>
                        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#99FFFFFF" Height="20" Width="120" Margin="10,55,0,-7"/>
                        <PasswordBox HorizontalAlignment="Left" PasswordChar="*" Height="20" Margin="10,75,-19,-27" VerticalAlignment="Top" Width="151" Background="Black" Foreground="White" BorderBrush="#FF8C8D8F" SelectionBrush="#FF760303" FontSize="16" IsEnabled="False"/>
                    </Grid>
                    <Button Name="__StartStopServer" Content="Start Server" HorizontalAlignment="Left" Margin="26,186,0,0" VerticalAlignment="Top" Width="120" Height="25" Background="#FF323232" BorderBrush="#FFBDBDBD" Foreground="#99FFFFFF" Click="__StartStopServer_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Server" Foreground="White" BorderBrush="Black" Background="Black">
                <Grid Margin="0">
                    <TextBox Name="__ServerConsole" HorizontalAlignment="Center" Height="200" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Width="766" Margin="10,0,10,10" BorderBrush="#FFAAAAAA" SelectionBrush="#FFAA1F11" Foreground="White" Background="Black"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
